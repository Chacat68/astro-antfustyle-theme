---
import Link from '~/components/base/Link.astro'
import { ensureTrailingSlash } from '~/utils/path'
import { SITE } from '~/config'
import { getRelativeLocaleUrl } from 'astro:i18n'
import { getLocale } from '~/i18n/translate'

const locale = getLocale(Astro.currentLocale)
const homeHref = ensureTrailingSlash(getRelativeLocaleUrl(locale, ''))
---

<Link
  class="select-none op-transition"
  href={homeHref}
  aria-label={SITE.author}
  aria-current={ensureTrailingSlash(Astro.url.pathname) === homeHref
    ? 'page'
    : false}
>
  <div class="logo-container">
    <span class="logo-text">付之一笑</span>
  </div>
</Link>

<style>
  .logo-container {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.8rem;

    transform: scale(1.05);
  }

  @media (max-width: 767.9px) {
    .logo-container {
      margin-top: 0.125rem;

      transform-origin: 0%;
      transform: scale(0.95);
    }
  }

  .logo-container .logo-text {
    font-size: 1.25rem;
    font-weight: 600;
    line-height: 1;
    color: currentColor;
    white-space: nowrap;
  }
</style>
