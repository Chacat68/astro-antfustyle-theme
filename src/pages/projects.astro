---
import BaseLayout from '~/layouts/BaseLayout.astro'
import StandardLayout from '~/layouts/StandardLayout.astro'
import GroupView from '~/components/views/GroupView.astro'
import { getLocale, useTranslations } from '~/i18n/translate'

const frontmatter = {
  title: 'Projects',
  subtitle: '正在参与制作的项目，内容创作等',
  description:
    '这里展示了我正在参与制作的项目、内容创作等。欢迎查看并参与其中！',
  bgType: 'dot',
  toc: true,
  ogImage: true,
} as const

const locale = getLocale(Astro.currentLocale)
const t = useTranslations(locale)
---

<BaseLayout
  title={t('page.projects.title')}
  description={t('page.projects.description')}
  bgType={frontmatter.bgType}
  ogImage={frontmatter.ogImage}
>
  <StandardLayout
    class="max-w-300"
    title={t('page.projects.title')}
    subtitle={t('page.projects.subtitle')}
    isCentered={true}
  >
    <GroupView collectionType="projects" pageToc={frontmatter.toc} />
  </StandardLayout>
</BaseLayout>
